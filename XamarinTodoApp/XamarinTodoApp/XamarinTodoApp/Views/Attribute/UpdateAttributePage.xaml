<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="XamarinTodoApp.Views.Attribute.UpdateAttributePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:attr="clr-namespace:XamarinTodoApp.Views.Attribute"
    xmlns:local="clr-namespace:XamarinTodoApp.ViewModels.Attribute"
    xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
    Title="Edit Attribute"
    x:DataType="local:AttributeDetailViewModel"
    BackgroundColor="WhiteSmoke"
    Shell.TabBarIsVisible="False">




    <ContentPage.Behaviors>
        <xct:EventToCommandBehavior Command="{Binding PageAppearingCommand}" EventName="Appearing" />
    </ContentPage.Behaviors>



    <ContentPage.Content>
        <StackLayout Padding="15" Spacing="3">
            <attr:NewAttributeTemplate />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>